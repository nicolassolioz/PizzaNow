<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycompany.pizzanow">

    <uses-sdk android:maxSdkVersion="11" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity android:name=".KeyActivities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SuccDisplayActivity" />
        <activity android:name=".ShowSuccActivity" />
        <activity android:name=".Toolbar.ToolbarActivity" />
        <activity
            android:name=".Support.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".Support.AboutActivity"></activity>
    </application>

</manifest>